<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        xmlns:app="http://schemas.android.com/apk/res-auto">
        <TextView
            android:layout_width="289dp"
            android:layout_height="wrap_content"
            android:text="Sign In"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textSize="21sp"
            android:textColor="#0887ff"
            android:layout_marginTop="47dp"/>
        <ImageView
            android:layout_marginTop="27dp"
            android:layout_width="233dp"
            android:layout_height="140dp"
            android:src="@drawable/ic_mailbox"
            android:layout_gravity="center"/>
        <TextView
            android:layout_marginTop="63dp"
            android:layout_marginStart="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#80000000"
            android:letterSpacing="-0.01"
            android:text="Email Address" />
        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="24dp"
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:background="@drawable/text_input_box">
            <android.support.design.widget.TextInputLayout
                app:hintEnabled="false"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_width="match_parent"
                android:layout_height="41dp">

                <android.support.design.widget.TextInputEditText
                    android:hint="abc_123"
                    android:padding="10dp"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="12sp"
                    android:inputType="textPassword"/>
            </android.support.design.widget.TextInputLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#80000000"
                android:letterSpacing="-0.01"
                android:text="\@fountane.com"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="30dp"/>
        </RelativeLayout>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginStart="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#80000000"
            android:letterSpacing="-0.01"
            android:text="Password"/>
        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="24dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/text_input_box">
            <android.support.design.widget.TextInputLayout
                app:hintEnabled="false"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_width="match_parent"
                android:layout_height="41dp"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="#19000000">

                <android.support.design.widget.TextInputEditText
                    android:hint="**********"
                    android:padding="10dp"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="12sp"
                    android:inputType="textPassword"/>
            </android.support.design.widget.TextInputLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <CheckBox
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:layout_marginStart="28dp"
                android:button="@drawable/checkbox_selector"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Remember Me"
                android:layout_marginStart="54dp"
                android:textSize="12sp"
                android:textColor="#80000000"
                android:letterSpacing="-0.01"
                android:layout_centerVertical="true"/>
            <TextView
                android:layout_marginTop="15dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:textSize="12sp"
                android:textColor="#80000000"
                android:letterSpacing="-0.01"
                android:text="Forgot Password?"
                android:focusable="true" />
        </RelativeLayout>
        <Button
            android:layout_marginStart="49dp"
            android:layout_marginEnd="48dp"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/sky_blue_button"
            android:text="SIGN IN"
            android:textColor="#ffffff"
            android:textSize="14sp"/>
        <TextView
            android:layout_gravity="center"
            android:layout_width="19dp"
            android:layout_height="16dp"
            android:layout_marginTop="6dp"
            android:textSize="14sp"
            android:fontFamily="sans-serif-medium"
            android:textStyle="normal"
            android:textColor="#757575"
            android:letterSpacing="0.03"
            android:text="Or"/>
        <Button
            android:layout_marginStart="49dp"
            android:layout_marginEnd="48dp"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="#ffffff"
            android:paddingStart="12dp"
            android:drawableStart="@drawable/ic_btn_google_light_normal_ios"
            android:text="Sign in with Google"
            android:textAllCaps="false"
            android:elevation="2dp"
            android:layout_marginTop="5dp"
            android:textSize="14sp"
            android:fontFamily="sans-serif-medium"
            android:textStyle="normal"
            android:textColor="#757575"
            android:letterSpacing="0.03"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="35dp"
            android:layout_marginBottom="38dp"
            android:enabled="false"
            android:clickable="true"
            android:background="?selectableItemBackground"
            android:text="@string/new_to_fountane_hr_register"
            android:textColor="#0887ff"
            android:textSize="12sp"
            android:focusable="true" />
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>