<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="29dp">
    <android.support.v7.widget.CardView
        android:id="@+id/cardView_collapse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true">
        <LinearLayout
                android:id="@+id/linearLayoutHolder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="1dp">


                <ImageView
                    android:id="@+id/image"
                    android:layout_width="match_parent"
                    android:layout_height="160.7dp"
                    android:background="@drawable/dummy_filler" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp">
                    <LinearLayout
                        android:layout_weight="0"
                        android:layout_marginTop="6dp"
                        android:layout_marginStart="10.5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/date_view_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textColor="#0887ff"
                            android:text="Jan"/>
                        <TextView
                            android:id="@+id/date_view_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:textColor="#0887ff"
                            android:layout_gravity="center_horizontal"
                            android:text="26"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/categoryTitle"
                        android:layout_weight="1"
                        android:layout_marginLeft="15.5dp"
                        android:layout_marginStart="15.5dp"
                        android:layout_marginEnd="29dp"
                        android:layout_marginBottom="6dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="New Fountane logo launch Office Brunch Party"
                        android:textSize="16sp"
                        android:layout_gravity="fill_vertical" />


                    <ImageButton
                        android:id="@+id/categoryExpandBtn"
                        android:layout_weight="0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="15dp"
                        android:src="@drawable/ic_arrow_point_to_right"
                        android:background="?selectableItemBackgroundBorderless"
                        android:textAllCaps="false"
                        android:textSize="12sp"
                        android:fontFamily="sans-serif"
                        android:textStyle="normal"
                        android:textColor="#0887ff"
                        android:layout_gravity="center_vertical" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/location_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="#b0b1b2"
                        android:layout_marginStart="49dp"
                        android:text="Fountane, India" />
                    <TextView
                        android:layout_marginStart="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="9sp"
                        android:textColor="#b0b1b2"
                        android:text="12:45 AM"/>
                </LinearLayout>
            </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>