<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginTop="23dp"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_marginStart="25.5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/date_view"
            android:layout_marginTop="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#0887ff"
                android:gravity="center_horizontal"
                android:text="Jan"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#0887ff"
                android:gravity="center_horizontal"
                android:text="26"
                android:textAlignment="center"/>
        </LinearLayout>
        <TextView
            android:id="@+id/leave_summary_view"
            android:layout_marginStart="15.5dp"
            android:layout_toEndOf="@id/date_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#6d7278"
            android:lineSpacingExtra="6sp"
            android:text="Casual Leave - 3 days"/>
        <TextView
            android:id="@+id/leave_detail_view"
            android:layout_toEndOf="@id/date_view"
            android:layout_marginStart="15.5dp"
            android:layout_below="@id/leave_summary_view"
            android:layout_marginTop="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#6d7278"
            android:lineSpacingExtra="6sp"
            android:text="12th - 14th March"/>
        <TextView
            android:id="@+id/leave_status_view"
            android:layout_marginTop="5dp"
            android:layout_marginStart="36.5dp"
            android:layout_below="@id/leave_detail_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#40000000"
            android:text="Pending"/>
        <ImageButton
            android:id="@+id/leave_edit"
            android:layout_marginTop="20dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="28dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/document_ripple_effect"
            android:src="@drawable/ic_create_new_pencil_button"/>
        <TextView
            android:layout_below="@id/leave_edit"
            android:layout_marginTop="12dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="35dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="9sp"
            android:textColor="#b0b1b2"
            android:text="12:45 AM"/>

    </RelativeLayout>
    <View
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#40000000"/>
</LinearLayout>