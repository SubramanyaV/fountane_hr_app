<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Register"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textSize="21sp"
            android:textColor="#0887ff"
            android:layout_marginTop="47dp"/>
        <ImageView
            android:layout_width="135dp"
            android:layout_height="164dp"
            android:padding="0dp"
            android:src="@drawable/ic_register2"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:layout_marginStart="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#80000000"
            android:letterSpacing="-0.01"
            android:text="Email Address" />
        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="24dp"
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:background="@drawable/text_input_box">
            <android.support.design.widget.TextInputLayout
                app:hintEnabled="false"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_width="match_parent"
                android:layout_height="41dp">

            <android.support.design.widget.TextInputEditText
                android:hint="abc_123"
                android:padding="10dp"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="12sp"
                android:inputType="textEmailAddress"/>
            </android.support.design.widget.TextInputLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#80000000"
                android:letterSpacing="-0.01"
                android:text="@fountane.com"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="30dp"/>
        </RelativeLayout>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginStart="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#80000000"
            android:letterSpacing="-0.01"
            android:text="Password"/>
        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="24dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/text_input_box">
            <android.support.design.widget.TextInputLayout
                app:hintEnabled="false"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_width="match_parent"
                android:layout_height="41dp">

            <android.support.design.widget.TextInputEditText
                android:hint="At least 8 characters"
                android:padding="10dp"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="12sp"
                android:inputType="textPassword"/>
            </android.support.design.widget.TextInputLayout>
        </RelativeLayout>
        <Button
            android:layout_marginStart="49dp"
            android:layout_marginEnd="48dp"
            android:layout_marginTop="60dp"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/sky_blue_button"
            android:text="REGISTER"
            android:textColor="#ffffff"
            android:textSize="14sp"/>
        <TextView
            android:layout_gravity="center"
            android:layout_width="19dp"
            android:layout_height="16dp"
            android:layout_marginTop="6dp"
            android:textSize="14sp"
            android:fontFamily="sans-serif-medium"
            android:textStyle="normal"
            android:textColor="#757575"
            android:letterSpacing="0.03"
            android:text="Or"/>
        <Button
            android:layout_marginStart="49dp"
            android:layout_marginEnd="48dp"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="#ffffff"
            android:paddingStart="12dp"
            android:drawableStart="@drawable/ic_btn_google_light_normal_ios"
            android:text="Register with Google"
            android:textAllCaps="false"
            android:elevation="2dp"
            android:layout_marginTop="5dp"
            android:textSize="14sp"
            android:fontFamily="sans-serif-medium"
            android:textStyle="normal"
            android:textColor="#757575"
            android:letterSpacing="0.03"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="35dp"
            android:layout_marginBottom="38dp"
            android:clickable="true"
            android:text="@string/already_registered_sign_in"
            android:background="?selectableItemBackground"
            android:textColor="#0887ff"
            android:textSize="12sp"
            android:focusable="true" />
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>