<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginTop="23dp"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_marginStart="25.5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/date_view"
            android:layout_marginTop="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#0887ff"
                android:gravity="center_horizontal"
                android:text="Jan"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#0887ff"
                android:gravity="center_horizontal"
                android:text="26"
                android:textAlignment="center"/>
        </LinearLayout>
        <TextView
            android:id="@+id/leave_summary_view"
            android:layout_marginStart="15.5dp"
            android:layout_toEndOf="@id/date_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#6d7278"
            android:lineSpacingExtra="6sp"
            android:text="Check In - 9:45 AM"/>
        <TextView
            android:id="@+id/leave_detail_view"
            android:layout_toEndOf="@id/date_view"
            android:layout_marginStart="15.5dp"
            android:layout_below="@id/leave_summary_view"
            android:layout_marginTop="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#6d7278"
            android:lineSpacingExtra="6sp"
            android:text="Check Out - 00:00 NA"/>
        <TextView
            android:layout_marginTop="22dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="65dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#40000000"
            android:text="Comment"/>
        <ImageView
            android:layout_marginTop="19dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="35dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_chat"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">
        <EditText
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="19dp"
            android:background="@drawable/text_input_box"
            android:textSize="14sp"
            android:padding="20dp"
            android:hint="Type your comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="19dp"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:text="Post"
            android:background="@drawable/sky_blue_button"
            android:textColor="#ffffff"
            android:textSize="14sp"/>
    </RelativeLayout>
    <View
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="26dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#40000000"
        android:visibility="visible"/>
</LinearLayout>