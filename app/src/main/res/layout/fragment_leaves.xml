<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".LeavesFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="21dp"
            android:layout_marginStart="20dp"
            android:textSize="20sp"
            android:textColor="#37394c"
            android:gravity="center_horizontal"
            android:text="All"/>

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scrollbars="none">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

               <android.support.v7.widget.CardView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginStart="12dp">
                <RelativeLayout
                    android:layout_width="90dp"
                    android:layout_height="104dp">
                    <TextView
                        android:id="@+id/title_view_1"
                        android:layout_marginTop="13sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Casual"
                        android:textSize="16sp"
                        android:textColor="#5babfb"
                        android:lineSpacingExtra="8sp"
                        android:layout_centerHorizontal="true"/>
                    <LinearLayout
                        android:id="@+id/leave_holder_view_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@id/title_view_1">
                        <TextView
                            android:id="@+id/no_of_leaves_view_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="21sp"
                            android:textColor="#5babfb"
                            android:text="13"/>
                        <TextView
                            android:id="@+id/total_no_of_leaves_view_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textColor="#5babfb"
                            android:text="/15"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/summary_view"
                        android:layout_below="@id/leave_holder_view_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="8sp"
                        android:textColor="#5babfb"
                        android:layout_centerHorizontal="true"
                        android:maxLines="2"
                        android:text="Available per \nyear"
                        android:textAlignment="center"/>
                </RelativeLayout>

               </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp">
                <RelativeLayout
                    android:layout_width="90dp"
                    android:layout_height="104dp">
                    <TextView
                        android:id="@+id/title_view_2"
                        android:layout_marginTop="13sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sick"
                        android:textSize="16sp"
                        android:textColor="#cbc704"
                        android:lineSpacingExtra="8sp"
                        android:layout_centerHorizontal="true"/>
                    <LinearLayout
                        android:id="@+id/leave_holder_view_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@id/title_view_2">
                        <TextView
                            android:id="@+id/no_of_leaves_view_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="21sp"
                            android:textColor="#cbc704"
                            android:text="13"/>
                        <TextView
                            android:id="@+id/total_no_of_leaves_view_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textColor="#cbc704"
                            android:text="/15"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/summary_view_2"
                        android:layout_below="@id/leave_holder_view_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="8sp"
                        android:textColor="#cbc704"
                        android:layout_centerHorizontal="true"
                        android:maxLines="2"
                        android:text="Available per \nyear"
                        android:textAlignment="center"/>
                </RelativeLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp">
                <RelativeLayout
                    android:layout_width="90dp"
                    android:layout_height="104dp">
                    <TextView
                        android:id="@+id/title_view_3"
                        android:layout_marginTop="13sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Paid"
                        android:textSize="16sp"
                        android:textColor="#a2d072"
                        android:lineSpacingExtra="8sp"
                        android:layout_centerHorizontal="true"/>
                    <LinearLayout
                        android:id="@+id/leave_holder_view_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@id/title_view_3">
                        <TextView
                            android:id="@+id/no_of_leaves_view_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="21sp"
                            android:textColor="#a2d072"
                            android:text="13"/>
                        <TextView
                            android:id="@+id/total_no_of_leaves_view_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textColor="#a2d072"
                            android:text="/15"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/summary_view_3"
                        android:layout_below="@id/leave_holder_view_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="8sp"
                        android:textColor="#a2d072"
                        android:layout_centerHorizontal="true"
                        android:maxLines="2"
                        android:text="Available per \nyear"
                        android:textAlignment="center"/>
                </RelativeLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="22dp">
                <RelativeLayout
                    android:layout_width="90dp"
                    android:layout_height="104dp">
                    <TextView
                        android:id="@+id/title_view_4"
                        android:layout_marginTop="13sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Optional"
                        android:textSize="16sp"
                        android:textColor="#e86565"
                        android:lineSpacingExtra="8sp"
                        android:layout_centerHorizontal="true"/>
                    <LinearLayout
                        android:id="@+id/leave_holder_view_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@id/title_view_4">
                        <TextView
                            android:id="@+id/no_of_leaves_view_4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="21sp"
                            android:textColor="#e86565"
                            android:text="13"/>
                        <TextView
                            android:id="@+id/total_no_of_leaves_view_4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textColor="#e86565"
                            android:text="/15"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/summary_view_4"
                        android:layout_below="@id/leave_holder_view_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="8sp"
                        android:textColor="#e86565"
                        android:layout_centerHorizontal="true"
                        android:maxLines="2"
                        android:text="Available per \nyear"
                        android:textAlignment="center"/>
                </RelativeLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>
        </HorizontalScrollView>

        <TextView
            android:layout_marginTop="23dp"
            android:layout_marginStart="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#37394c"
            android:gravity="center_horizontal"
            android:text="Leave Status"/>

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"/>
    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/ic_add"
        app:backgroundTint="@null"/>

</FrameLayout>